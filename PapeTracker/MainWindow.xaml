        ResizeMode="CanResize"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing"
        LocationChanged="Window_LocationChanged"
        SizeChanged="Window_SizeChanged"
        AllowDrop="True" Drop="DropFile"
        Title="PapeTracker" Height="880" Width="570" Background="#303030"
        MinHeight="575" MinWidth="400">

    <Window.Resources>
        <Style TargetType="Image">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="White">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Options" Focusable="False">
                <MenuItem Header="Save Progress" Click="SaveProgress"/>
                <MenuItem Header="Load Progress" Click="LoadProgress"/>
                <Separator/>
                <MenuItem Header="Load Spoiler Log" Click="LoadSpoilerMenuClick"/>
                <!--<MenuItem Header="Auto Tracking">
                    <MenuItem Header="PCSX2" Click="InitPCSX2Tracker"/>
                    <MenuItem Header="PC" Click="InitPCTracker"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Mode">
                    <MenuItem Header="Load JSmartee Hints" Click="LoadHints"/>
                    <MenuItem Header="Load Shananas Hintless Seed" Click="ParseSeed"/>
                    <MenuItem Header="Load OpenKH Seed" Click="OpenKHSeed"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Broadcast Window" HorizontalAlignment="Left" Click="BroadcastWindow_Open" Width="235"/>
                <Separator/> -->
                <MenuItem Header="Reset Window" Click="ResetSize"/>
                <MenuItem Header="Reset Tracker" Click="OnReset"/>
            </MenuItem>
            <MenuItem Header="Toggles" Focusable="False">
                <MenuItem Name="FryingPanOption" Header="Promise Charm" IsCheckable="True" IsChecked="False" Visibility="Collapsed" Click="FryingPanToggle"/>
                <MenuItem Name="BlueHouseOption" Header="Ansem Reports" IsCheckable="True" IsChecked="True" Visibility="Collapsed" Click="BlueHouseToggle"/>
                <MenuItem Name="BowserCastleOption" Header="Once More / Second Chance" IsCheckable="True" Visibility="Collapsed" IsChecked="True" Click="BowserCastleToggle"/>
                <Separator/>
                <MenuItem Name="DragAndDropOption" Header="Drag and Drop" IsCheckable="True" IsChecked="True" Click="DragDropToggle"/>
                <MenuItem Name="TopMostOption" Header="Always on Top" IsCheckable="True" IsChecked="False" Click="TopMostToggle"/>
                <!--<MenuItem Name="BroadcastStartupOption" Header="Broadcast Window On Startup" IsCheckable="True" IsChecked="False" Click="BroadcastStartupToggle"/>-->
            </MenuItem>
            <MenuItem Name="ModeDisplay" Foreground="DimGray" Header="Spoiler Log Import Mode" Focusable="False" IsHitTestVisible="False"/>
            <MenuItem Name="SeedLoadedDisplay" Foreground="DimGray" Header="" Focusable="False" IsHitTestVisible="False"/>
            <MenuItem Header="v0.3.0" IsHitTestVisible="False" Focusable="False" HorizontalAlignment="Right"/>
        </Menu>

